<div id="freq-form">
  <%= form_for @freq do |f| %>
    <%= f.hidden_field :assignment_id, value: @assignment.id %>
    <ul>
    <% @plan.commo_plan.commo_items.each do |c| %>
      <li><%= check_box_tag :freq %><%= c.function %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<table class="assigned-resources">
  <thead class="">
    <th class="c1"><span class="">Zone</span></th>
    <th class="c1"><span class="">Ch #</span></th>
    <th class="c3"><span class="">Channel Name</span></th>
    <th class="c3"><span class="">Function</span></th>
    <th class="c2"><span class="">RX Freq</span></th>
    <th class="c2"><span class="">Tone</span></th>
    <th class="c2"><span class="">TX Freq</span></th>
    <th class="c2"><span class="">Tone</span></th>
    <th class="c4"><span class="">Assignment</span></th>
    <th class="c3"><span class="">Remarks</span></th>
  </thead>

  <% @assignment.freqs.each do |f| %>
  <tr  class="radio-channel">
      <td class="c1"><span class=""><%= f.commo_item.zone %></span></td>
      <td class="c1"><span class=""><%= f.commo_item.ch_num %></span></td>
      <td class="c3"><span class=""><%= f.commo_item.channel_name %></span></td>
      <td class="c4"><span class=""><%= f.commo_item.function %></span></td>
      <td class="c3"><span class=""><%= f.commo_item.rx_freq %></span></td>
      <td class="c2"><span class=""><%= f.commo_item.rx_tone %></span></td>
      <td class="c2"><span class=""><%= f.commo_item.tx_freq %></span></td>
      <td class="c2"><span class=""><%= f.commo_item.tx_tone %></span></td>
      <td class="c2"><span class=""><%= f.commo_item.assignment %></span></td>
      <td class="c3"><span class=""></span></td>
    </tr>
    <% end %>
  <% (5 - @assignment.freqs.count).times do %>
    <tr class="radio-channel blank-row">
       <td class="c1"><span class=""><%= link_to '+', 'javascript:;', class: "new-freq-button" %></span>
          

      </td>
      <td class="c1"><span class=""></span></td>
      <td class="c3"><span class=""></span></td>
      <td class="c3"><span class=""></span></td>
      <td class="c2"><span class=""></span></td>
      <td class="c2"><span class=""></span></td>
      <td class="c2"><span class=""></span></td>
      <td class="c2"><span class=""></span></td>
      <td class="c4"><span class=""></span></td>
      <td class="c3"><span class=""></span></td>
    </tr>
  <% end %>
</table>