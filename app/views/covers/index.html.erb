<div class="row">
  <div class="col-lg-8 col-xs-12 center-block">

    <%= form_for [@incident, @plan, @cover] do |form| %>

      <div class="form-group">
        <%= form.hidden_field :plan_id, id: :cover_plan_id, value: @plan.id %>
