<%= content_for :title, "Safety Message" %>
<div id="incident-objectives">
  <div class="container">
    <div class="col-xs-12 col-lg-8 center-block">
      <div class="row">
        <div class="plan-panel-head">
          <ul class="tabrow">
            <li><%= link_to 'Plan', incident_plan_path(@incident, @plan) %></li>
            <li><%= link_to "Cover", "../../#{@plan.id}/cover"  %></li>
            <li><%= link_to "202", "../../#{@plan.id}/202" %></li>
            <li><%= link_to "203", "../../#{@plan.id}/203" %></li>
            <li><%= link_to "204", incident_plan_assignments_path(@incident, @plan) %></li>
            <li><%= link_to "205", incident_plan_commo_plans_path(@incident, @plan) %></li>
            <li><%= link_to "206", '#' %></li>
            <li><%= link_to "220", '#' %></li>
            <li class="selected"><%= link_to "Safety Message", incident_plan_safety_messages_path(@incident, @plan) %></li>
            </ul>
          </div>
        <div class="masking-tape"></div>
      </div>
      <div class="row">
        <div class="col-xs-12 title-row bl top-row">
          <div class="col-xs-5">
            <h4><strong>SAFETY MESSAGE</strong></h4>
          </div>
          <div class="col-xs-3 bl form-box">
            <span class="small">1. INCIDENT NAME<br>
              <span class="sm-padding-left"><%= @incident.name %></span>
            </span>

          </div>
          <div class="col-xs-2 bl form-box">
            <span class="small">2. DATE PREPARED<br>
              <%= best_in_place @safety_message, :date_prepared, :as => :input, :place_holder => "(ENTER DATE)", class: 'bip-input' %>
            </span>
          </div>
          <div class="col-xs-2 bl form-box no-padding-right">
            <span class="small">3. TIME PREPARED<br>
              <span class="neg-padding-top">
                <%= best_in_place @safety_message, :time_prepared, :as => :input, :place_holder => "(ENTER TIME)", class: 'bip-input' %>
              </span>
            </span>
          </div>
        </div>
      </div>

      <div class="row">
        <div id="ops-period" class="col-xs-12 title-row">
          <span class="small">4. OPERATIONAL PERIOD</span><br>
          <span class="huge-padding-left"><%= @plan.ops_period %></span>
          
        </div>
      </div>
      <div class="row">
        <div id="major-hazards" class="col-xs-12">
          <span class="small">5. MAJOR HAZARDS AND RISKS</span>
            <div class="sm-padding-left hazards-form">
              <%= best_in_place @safety_message, :hazards, :as => :textarea, :display_with => :simple_format,
                                                 :place_holder => "(LIST HAZARDS HERE)", class: 'bip-input' %>
            </div>
        </div>
      </div>
 
      <div class="row">
        <div id="safety-message" class="col-xs-12">
          <span class="small">6. NARRATIVE</span><br>
           <div id="narrative">
             <%= best_in_place @safety_message, :narrative, :as => :textarea, :display_with => :simple_format,
                                                :place_holder => "(ADD SAFETY NARRATIVE)", class: 'bip-input' %>
           </div>
        </div>
      </div>
      
      <div class="row">
        <div class="prepared-by-row safety-prep col-xs-12">
            <div class="col-xs-12">
              <span class="small small-box">9. PREPARED BY</span>
              <span class="lg-padding-left"><%= best_in_place @safety_message, :prepared_by, :as => :input, :place_holder => "(ADD NAME HERE)", class: 'bip-input' %></span>
            </div>
            
        </div>
      </div>
    </div>
  </div>
</div>