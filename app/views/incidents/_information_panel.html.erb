 
  <div class="panel-body">
    <div class="incident-content-block">
      <h4><strong>Incident Information</strong></h4>
        <!-- wildfire specific -->
        <% if @incident.wildfire? %>
          <div>
            
            <div class="col-lg-12 col-xs-12">
              <div class="col-lg-4 col-xs-4">Size: <%= best_in_place @incident, :size %> acres  </div>
              <div class="col-lg-4 col-xs-4">% Contained: <%= @incident.percent_contained %></div>
              <div class="col-lg-4 col-xs-4">Status: <%= @incident.status %></div>
            </div>
            <div class="col-lg-12 col-xs-12">
              <div class="col-lg-4 col-xs-4">Location</div>
              <div class="col-lg-4 col-xs-4"> </div>
              <div class="col-lg-4 col-xs-4"></div>
            </div>
            <div class="col-lg-12 col-xs-12">
              <div class="col-lg-4 col-xs-4">Financial Code: <%= best_in_place @incident, :financial_code %> </div>
              <div class="col-lg-4 col-xs-4">P Code:  <%= best_in_place @incident, :p_code %></div>
              <div class="col-lg-4 col-xs-4"></div>
            </div>
          </div>
        <% end %>
        <!-- All Hazard -->
        <% unless @incident.wildfire? %>
          
          <div class="col-lg-12 col-xs-12">
            <div class="col-lg-4 col-xs-4">Location</div>
            <div class="col-lg-4 col-xs-4"> </div>
            <div class="col-lg-4 col-xs-4"></div>
          </div>
          <div class="col-lg-12 col-xs-12">
            <div class="col-lg-4 col-xs-4">Financial Code: <%= best_in_place @incident, :financial_code %> </div>
            <div class="col-lg-4 col-xs-4">P Code:  <%= best_in_place @incident, :p_code %></div>
            <div class="col-lg-4 col-xs-4"></div>
          </div>
        <% end %>
      </div>
      
  </div> <!-- panel body -->

