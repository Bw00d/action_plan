<div id="incident-container" class="container">
  <div class="row">
    <div class="col-lg-10 col-xs-12 center-block">

      <div class="panel panel-default devise-bs center-block">
        <div class="panel-heading">
          <h4>
            <strong><%= @incident.display_incident_name %></strong>
            <span class="float-right plans-button"><%= link_to "Plans", incident_plans_path(@incident), class: 'btn btn-primary' %></span>
            </h4>
        </div>
        <div class="panel-body">
          <div class="incident-content-block">
            <h4><strong>Incident Information</strong></h4>
              <!-- wildfire specific -->
              <% if @incident.wildfire? %>
                <div>
                  
                  <div class="col-lg-12 col-xs-12">
                    <div class="col-lg-4 col-xs-4">Size: <%= best_in_place @incident, :size %> acres  </div>
                    <div class="col-lg-4 col-xs-4">% Contained: <%= @incident.percent_contained %></div>
                    <div class="col-lg-4 col-xs-4">Status: <%= @incident.status %></div>
                  </div>
                  <div class="col-lg-12 col-xs-12">
                    <div class="col-lg-4 col-xs-4">Location</div>
                    <div class="col-lg-4 col-xs-4"> </div>
                    <div class="col-lg-4 col-xs-4"></div>
                  </div>
                  <div class="col-lg-12 col-xs-12">
                    <div class="col-lg-4 col-xs-4">Financial Code: <%= best_in_place @incident, :financial_code %> </div>
                    <div class="col-lg-4 col-xs-4">P Code:  <%= best_in_place @incident, :p_code %></div>
                    <div class="col-lg-4 col-xs-4"></div>
                  </div>
                </div>
              <% end %>
              <!-- All Hazard -->
              <% unless @incident.wildfire? %>
                
                <div class="col-lg-12 col-xs-12">
                  <div class="col-lg-4 col-xs-4">Location</div>
                  <div class="col-lg-4 col-xs-4"> </div>
                  <div class="col-lg-4 col-xs-4"></div>
                </div>
                <div class="col-lg-12 col-xs-12">
                  <div class="col-lg-4 col-xs-4">Financial Code: <%= best_in_place @incident, :financial_code %> </div>
                  <div class="col-lg-4 col-xs-4">P Code:  <%= best_in_place @incident, :p_code %></div>
                  <div class="col-lg-4 col-xs-4"></div>
                </div>
              <% end %>
            </div>
            <div class="incident-content-block">
              <h4><strong>Incident Resources</strong></h4>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order #</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Leader</th>
                    <th scope="col"># personnel</th>
                    <th scope="col">Agency</th>
                    <th scope="col">LWD</th>
                  </tr>
                </thead>
                <tbody>
                  <% @resources.each do |r|  %>
                  <tr>
                    <th scope="row">1</th>
                    <td><%= best_in_place r, :order_number, :as => :input%></td>
                    <td><%= best_in_place r, :name, :as => :input %></td>
                    <td><%= best_in_place r, :position, :as => :input %></td>
                    <td><%= best_in_place r, :leader, :as => :input %></td>
                    <td><%= best_in_place r, :number_personnel, :as => :input %></td>
                    <td><%= best_in_place r, :agency, :as => :input %></td>
                    <td><%= best_in_place r, :lwd, :as => :input %></td>
                  </tr>
                  <% end %>
  
                </tbody>
              </table>
  
              <div id="resource-form" class="form-group">
                <%= render 'new_resource_form' %>
              </div>
              <div>
                  <%= link_to (fa_icon('user-plus')), "javascript:;", id: 'new-resource' %>
              </div>
            </div>
        </div> <!-- panel body -->
      </div>   <!-- panel -->

      

        <%= link_to 'Back', incidents_path %>
    </div> <!-- responsive wrapper -->
  </div>  <!-- row -->
</div>   <!-- incident container -->

